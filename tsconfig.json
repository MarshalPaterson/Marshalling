{
    "compilerOptions": {
      "target": "es2015",
      "module": "es2015",
      "moduleResolution": "node",
      "jsx": "react",
      "outDir": "artifacts",
      "rootDir": "index.tsx",
      "allowSyntheticDefaultImports": true,
      "noImplicitAny": false,
      "preserveConstEnums": true,
      "allowJs": false,
      "sourceMap": true,
      "noImplicitReturns": true,
      "noUnusedParameters": true,
      "noUnusedLocals": true,
      "types": ["react", "react-native", "jest"]
    },
    "filesGlob": [
      "typings/index.d.ts",
      "*.ts",
      "*.tsx"
    ],
    "types": [
      "react",
      "react-native",
      "jest"
    ],
    "exclude": [
      "android",
      "ios",
      "build",
      "node_modules",
      "typings/browser.d.ts",
      "typings/browser"
    ],
    "compileOnSave": false
  }